@model IEnumerable<DotNetAppSqlDb.Models.MatchDetailsModel>

@{
    ViewBag.Title = "Details";
}

    <div id="#Actual" style="background-image:url('/Content/Images/background.jpg');height:100vh;color:white">
        <h2>Matches Played</h2>

        <div>
            <hr />
            <div id="table-wrapper" style="padding:5px 20px 20px 20px;margin:5px 20px 20px 20px;">
                <div style="height:30vh;overflow-y:scroll">
                    <table class="table" style="overflow:auto">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PlayerOneName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PlayerTwoName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.WinnerName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.entryDate)
                            </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PlayerOneName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PlayerTwoName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.WinnerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.entryDate)
                                </td>

                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
